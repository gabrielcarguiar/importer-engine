            <th>
                @Html.DisplayNameFor(model => model.MyPokemons[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MyPokemons[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MyPokemons[0].Pokemon.HP)
            </th>
            <th>
